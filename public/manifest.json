{
  "name": "AliMonitor",
  "description": "AliMonitor Extension",
  "version": "0.0.3",
  "manifest_version": 2,
  "homepage_url": "https://gitlab.cern.ch/kwijethu/alimonitor-browser-extension",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "AliMonitor",
    "default_icon": {
      "48": "./images/ml2.png",
      "96": "./images/ml2.png"
    }
  },
  "icons": {
    "48": "./images/ml2.png",
    "96": "./images/ml2.png"
  },
  "permissions": [
    "alarms",
    "activeTab",
    "https://alimonitor.cern.ch/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
